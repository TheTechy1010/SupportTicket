@model SupportTicket.ViewModels.AddCustomerViewModel
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">

        <div class="p-2">
            <h4>Add new customer </h4>
        </div>
        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <label>Enter customer email to assign an agent</label>
            @Html.TextBoxFor(x => x.CustomerEmail, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CustomerEmail, "", new { @class = "text-danger" })
            <hr />
            <input type="submit" class="btn btn-primary btn-block" value="Assign Agent" />
        }
        <hr />
        @if (TempData["cust"] != null)
        {
            var data = TempData["cust"] as string[];
            <div class="alert alert-dismissible alert-success p-3">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>Success!</strong>Customer @data[0] is assigned to @data[1]
            </div>
        }
    </div>
    <div class="col-md-3"></div>
</div>
